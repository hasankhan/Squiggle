<Window x:Class="Squiggle.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:chat="clr-namespace:Squiggle.Chat;assembly=Squiggle.Chat"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib" 
    Title="Squiggle Messenger" Height="600" Width="300" >
    <Window.Resources>
        <LinearGradientBrush x:Key="SignedOffBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF3DB3EA" Offset="0.012"/>
            <GradientStop Color="#FFE4F1F7" Offset="0.116"/>
            <GradientStop Color="White" Offset="0.23"/>
            <GradientStop Color="White" Offset="0.738"/>
            <GradientStop Color="#FFD0EAF5" Offset="0.953"/>
        </LinearGradientBrush>
        <Style x:Key="ContactInfoToolTipStyle" TargetType="{x:Type ToolTip}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToolTip}">
                        <Border BorderBrush="#111111" BorderThickness="1" SnapsToDevicePixels="True">
                            <Border Width="Auto" Height="Auto" Name="windowFrame" BorderBrush="#999999" BorderThickness="1" SnapsToDevicePixels="True" CornerRadius="0" Background="#525252" TextBlock.Foreground="White" TextBlock.FontFamily="Verdana" TextBlock.FontSize="11" Margin="0" Padding="3">
                                <ContentPresenter />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <LinearGradientBrush x:Key="ContactInfoBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFFCFCFD" Offset="0.04"/>
            <GradientStop Color="#FFE5E5F1" Offset="0.99"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="HeaderBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF1C8FB4" Offset="0"/>
            <GradientStop Color="#FF1F9BBA" Offset="1"/>
            <GradientStop Color="#FF01448B" Offset="0.517"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="ToolbarBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFDEECF6" Offset="0"/>
            <GradientStop Color="#FFDEEDF4" Offset="1"/>
            <GradientStop Color="#FFC2DDED" Offset="0.517"/>
        </LinearGradientBrush>
        <Style x:Key="StatusStyle" TargetType="Border">
            <Setter Property="Width" Value="10"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Background" Value="Gray"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Online">
                    <Setter Property="Background" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Idle">
                    <Setter Property="Background" Value="Orange"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Busy">
                    <Setter Property="Background" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <ObjectDataProvider MethodName="GetValues" 
        ObjectType="{x:Type sys:Enum}" 
        x:Key="AvailableUserStatus">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="chat:UserStatus" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="OfflineView" Background="{StaticResource SignedOffBackground}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Image HorizontalAlignment="Center" Margin="0,30,0,0" Source="Images\contacts.png" Height="128" Width="128"/>
                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <TextBlock Text="Sign In"  FontSize="18" Foreground="#FF355A88" HorizontalAlignment="Center"/>
                    <TextBlock Margin="20,20,20,0" Text="Specify your display name here as you want others to see it." TextWrapping="Wrap" />
                    <Border CornerRadius="5" BorderBrush="#FFD8E8F0" BorderThickness="1" Margin="20,5,20,5">
                        <StackPanel Orientation="Vertical">
                            <TextBox Margin="5,10,5,0" x:Name="txtdisplayName" HorizontalAlignment="Stretch" BorderBrush="Black" BorderThickness="0.5" />
                            <CheckBox x:Name="chkRememberName" Margin="5,10,0,0" Content="Remember me" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>
                    <Button HorizontalAlignment="Center" IsDefault="True" Width="60" Height="25" Content="Sign In" Click="SignIn"/>

                </StackPanel>
            </Grid>
        </Grid>
        <Grid x:Name="OnlineView" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Background="{StaticResource HeaderBackground}" Height="75">
                <Grid DataContext="{Binding Path=LoggedInUser}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.20*"/>
                        <ColumnDefinition Width="0.80*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.50*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="0.20*"/>
                    </Grid.RowDefinitions>
                    <Image Source="Images/8.png" Height="40" Grid.RowSpan="2"/>
                    <StackPanel x:Name="signedInView" Grid.Column="1" Orientation="Horizontal" >
                        <TextBlock Margin="10,0,5,0" VerticalAlignment="Bottom" Text="{Binding DisplayName}" Foreground="White" FontWeight="Bold" x:Name="txtLoggedInUser" HorizontalAlignment="Left" />
                        <ComboBox ItemsSource="{Binding Source={StaticResource AvailableUserStatus}}" SelectedValue="{Binding Path=Status}"
                                  Background="{StaticResource HeaderBackground}" VerticalAlignment="Bottom" Height="20" Foreground="White" Grid.Column="1" HorizontalAlignment="Left">
                            <ComboBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Background="{StaticResource HeaderBackground}"/>
                                </ItemsPanelTemplate>
                            </ComboBox.ItemsPanel>
                        </ComboBox>
                    </StackPanel> 
                    <StackPanel x:Name="emptyMessageView" Grid.Row="1" Grid.Column="1">
                        <TextBlock VerticalAlignment="Bottom" Margin="10,0,0,0" Text="You currently have no display message." TextTrimming="WordEllipsis"  Foreground="White"/>
                        <TextBlock HorizontalAlignment="Right" Margin="5,0,5,0"> 
                            <Hyperlink FontSize="10" Foreground="White" Click="PropmtDisplayMessage">Create message</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel x:Name="readOnlyMessageView" Visibility="Hidden" Grid.Row="1" Grid.Column="1">
                        <TextBlock VerticalAlignment="Bottom" x:Name="txbDisplayMessage" Margin="10,0,0,0" Text="{Binding DisplayMessage}" TextTrimming="WordEllipsis"  Foreground="White"/>
                        <TextBlock HorizontalAlignment="Right" Margin="5,0,5,0"> 
                            <Hyperlink FontSize="10" Foreground="White" Click="PropmtDisplayMessage">Change message</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel x:Name="writableMessageView" Visibility="Hidden" Grid.Row="1" Grid.Column="1">
                        <TextBox Margin="10,0,10,0" x:Name="txtDisplayMessage" HorizontalAlignment="Stretch"/>
                        <TextBlock HorizontalAlignment="Right" Margin="5,0,5,0"> 
                            <Hyperlink FontSize="10" Foreground="White" Click="UpdateDisplayMessage">Update</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
            <StackPanel Orientation="Vertical" Grid.Row="1">
                <StackPanel Background="{StaticResource ToolbarBackground}" Height="25" Orientation="Horizontal">
                    <Image Cursor="Hand" Source="Images\info.png" />
                    <Image Cursor="Hand" Source="Images\webcam.png" />
                    <Image Cursor="Hand" Source="Images\Distortions.png" />
                    <Image Cursor="Hand" Source="Images\itevent.png" />
                </StackPanel>
                <ItemsControl Margin="5" DataContext="{Binding}" ItemsSource="{Binding Path=Buddies}" >
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                            <Border BorderThickness="0.5" Margin="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.2*"/>
                                        <ColumnDefinition Width="0.8*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="0.01*"/>
                                    </Grid.RowDefinitions>
                                    <Border ToolTip="{Binding Path=Status}"
                                            Style="{StaticResource StatusStyle}"/>
                                    <TextBlock Cursor="Hand" MouseDown="TextBlock_MouseDown" Tag="{Binding}" 
                                               Text="{Binding Path=DisplayName}" HorizontalAlignment="Left" Grid.Column="1">
                                        <TextBlock.ToolTip>
                                            <ToolTip Placement="Left">
                                                <Border Width="200" CornerRadius="5" Background="{StaticResource ContactInfoBackground}">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="0.3*"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="0.3*"/>
                                                            <ColumnDefinition Width="0.7*"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <TextBlock VerticalAlignment="Top" Text="Contact" Foreground="Black" FontWeight="Bold"/>
                                                        <Image Source="Images\man.png" Grid.Row="1"/>
                                                        <StackPanel VerticalAlignment="Center" Orientation="Vertical" Grid.Column="1" Grid.Row="1">
                                                            <TextBlock Foreground="Black" Text="{Binding DisplayName, StringFormat=Display: \{0\}}"/>
                                                            <TextBlock Foreground="Black" Text="{Binding Status, StringFormat=Presence: \{0\}}"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>    
                                            </ToolTip>
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                    <TextBlock Grid.Row="1" Text="{Binding Path=DisplayMessage}" TextTrimming="WordEllipsis" ToolTip="{Binding Path=DisplayMessage}"  FontSize="10" HorizontalAlignment="Left" Grid.Column="1"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
            </StackPanel>
        </Grid>
   
    </Grid>
</Window>
