<Window x:Class="Squiggle.UI.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ChatWindow" Height="502" Width="654" FocusManager.FocusedElement="{Binding ElementName=txtMessage}"
        Loaded="Window_Loaded" Closed="Window_Closed" >
    <Grid Background="#FFF3F3F3">
        <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtUserLeftMessage" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="#FFFFFFE1" Visibility="Hidden"/>
        <Border BorderBrush="LightGray" BorderThickness="1">
            <ScrollViewer x:Name="scrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <TextBlock Padding="10" Background="White" TextWrapping="Wrap" x:Name="sentMessages" />
            </ScrollViewer>
        </Border>
        <Border Grid.Row="2" >
            <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Height="30" Grid.ColumnSpan="2" >
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFCFCFC" Offset="0.087"/>
                                <GradientStop Color="#FFECECEC" Offset="0.478"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <TextBox Grid.Row="1" Margin="2,5,5,0" x:Name="txtMessage" SpellCheck.IsEnabled="True" PreviewKeyDown="txtMessage_PreviewKeyDown" />
                    <Button Grid.Row="1" Margin="2,5,5,0" Grid.Column="1" IsDefault="True" Width="50" Content="Send"  Click="Button_Click" />
                    <TextBlock Margin="0,10,0,0" x:Name="txbLastMessageReceived" VerticalAlignment="Bottom" Grid.Row="2" Grid.ColumnSpan="2" Foreground="Black"/>
                </Grid>
        </Border>
        
    </Grid>
    </Grid>

</Window>
