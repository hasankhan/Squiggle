<sticky:StickyWindow xmlns:sticky="clr-namespace:Squiggle.UI.StickyWindows"
                     x:Class="Squiggle.UI.EmoticonSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EmoticonSelector" Width="200" Height="180"
        WindowStyle="None" ResizeMode="NoResize" Deactivated="Window_Deactivated" 
        BorderBrush="LightGray" BorderThickness="1"
        ShowInTaskbar="False" ShowActivated="True" KeyDown="Window_KeyDown" Closing="Window_Closing">
    <UniformGrid x:Name="root" FlowDirection="{StaticResource flowDirection}" Columns="4" />
</sticky:StickyWindow>
