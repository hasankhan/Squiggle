<Window x:Class="Squiggle.UI.ConversationViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conversation" Height="300" Width="420">
    <Grid>
        <ListView x:Name="messages">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Stamp}" Header="Stamp" />
                    <GridViewColumn DisplayMemberBinding="{Binding SenderName}" Header="Sender" />
                    <GridViewColumn DisplayMemberBinding="{Binding Type}" Header="Type" />
                    <GridViewColumn DisplayMemberBinding="{Binding Data}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
