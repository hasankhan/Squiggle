<sticky:StickyWindow xmlns:sticky="clr-namespace:Squiggle.UI.StickyWindows" 
                     x:Class="Squiggle.UI.ConversationViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="/Squiggle;component/Images/Chat.ico"                      
        Title="Conversation" Height="405" Width="613" KeyDown="StickyWindow_KeyDown">
    <Grid>
        <ListView x:Name="messages">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Stamp}" Header="{DynamicResource ConversationViewer_Stamp}" Width="140" />
                    <GridViewColumn DisplayMemberBinding="{Binding SenderName}" Header="{DynamicResource ConversationViewer_Sender}" Width="80" />
                    <GridViewColumn DisplayMemberBinding="{Binding Type}" Header="{DynamicResource ConversationViewer_Type}" Width="80" />
                    <GridViewColumn DisplayMemberBinding="{Binding Data}" Width="280" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</sticky:StickyWindow>
